@model SIKONSystem.DisplayModel.LectureDisplayModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Tidsplan</h1>

<p>
    <a asp-action="Create">Tilføj Nyt Oplæg</a>
</p>
<table class="table table-bordered">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.LextureDisplayList[0].Title)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.LextureDisplayList[0].StartTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LextureDisplayList[0].Speaker)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.LextureDisplayList[0].Spaces)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.LextureDisplayList)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.StartTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Speaker)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Spaces)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.LectureId">Rediger Oplæg</a> |
                    <a asp-action="Details" asp-route-id="@item.LectureId">Detaljer</a> |
                    <a asp-action="Delete" asp-route-id="@item.LectureId">Slet Oplæg</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<table class="table table-bordered">
    @Html.Raw(Model.PrintSchedule(Model.GatherSchedule(3,4,Model.LextureDisplayList))) 
</table>
